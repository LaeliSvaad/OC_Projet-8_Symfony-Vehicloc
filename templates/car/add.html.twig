{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}{% endblock %}

{% block body %}
    <section id="add">

        <a href="/">‚Üê Retour</a>

        <h1>Ajouter une voiture</h1>

        {{ form_start(form) }}

        <div class="input">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="input">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_label(form.monthly_price) }}
                {{ form_widget(form.monthly_price) }}
                {{ form_errors(form.monthly_price) }}
            </div>
            <div class="input">
                {{ form_label(form.daily_price) }}
                {{ form_widget(form.daily_price) }}
                {{ form_errors(form.daily_price) }}
            </div>
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_label(form.places) }}
                {{ form_widget(form.places) }}
                {{ form_errors(form.places) }}
            </div>
            <div class="input">
                {{ form_label(form.motor) }}
                {{ form_widget(form.motor) }}
                {{ form_errors(form.motor) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_widget(form.save) }}
        </div>

        {{ form_end(form) }}

    </section>
{% endblock %}
